@using System.Web.Optimization
@{
    ViewBag.Title = "Apartamentos";
    ViewBag.Description = "Listagem";
}

@model IList<Condominio.Models.Apartamento>

<div class="row">
    <div class="col-sm-12">
        <div class="box box-default">
            <div class="box-body">                
                <div class="row">
                    <div class="col-xs-8">
                        <div class="form-group">
                            <a class="btn btn-default" href="~/Apartamento/Add">Adicionar Apartamento</a>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <div class="form-group">
                            <input type="search" name="search" class="form-control pull-right" placeholder="Buscar ..." />
                        </div>
                    </div>
                </div>
                <table class="table table-striped" id="tabela-apartamentos">
                    <thead>
                        <tr>
                            <th width="15%">Número</th>
                            <th width="15%">Bloco</th>
                            <th width="60%">Responsável</th>
                            <th width="10%">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.Partial("~/Views/Apartamento/Tabela.cshtml", Model)
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ViewSpecificJavascript {
    @Scripts.Render("~/Bundles/js/apartamento")
}            