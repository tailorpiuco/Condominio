@model Condominio.Models.Morador
@{   
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.RedirectUrl = Url.Content("~/Morador");
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-default">
            <div class="box-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                @Html.LabelFor(p => p.Nome)
                                @Html.TextBoxFor(p => p.Nome, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Nome)
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <div class="form-group">
                                @Html.LabelFor(p => p.Email)
                                @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <div class="form-group">
                                @Html.LabelFor(p => p.Telefone)
                                @Html.TextBoxFor(p => p.Telefone, new { @class = "form-control", data_inputmask = "\"mask\": \"(99) 99999-9999\"", data_mask = "" })
                                @Html.ValidationMessageFor(model => model.Telefone)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-3">
                            <div class="form-group">
                                @Html.LabelFor(p => p.CPF)
                                @Html.TextBoxFor(p => p.CPF, new { @class = "form-control", data_inputmask = "\"mask\": \"999.999.999-99\"", data_mask = "" })
                                @Html.ValidationMessageFor(model => model.CPF)
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <div class="form-group">
                                @Html.LabelFor(p => p.DataNascimento)
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.TextBoxFor(p => p.DataNascimento, new { @class = "form-control pull-right datepicker" })
                                </div>
                                @Html.ValidationMessageFor(model => model.DataNascimento)
                            </div>
                        </div>
                    </div>

                    @Html.Partial("~/Views/Shared/PartialActionBar.cshtml")
                }
            </div>
        </div>
    </div>
</div>

