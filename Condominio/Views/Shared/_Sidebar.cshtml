            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Buscar...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        @* END Search *@
        @* BEGIN Menu *@
        <ul class="sidebar-menu" data-widget="tree">

            <li class="treeview">
                <a href="#">
                    <i class="glyphicon glyphicon-lock"></i>
                    <span>Administração</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@Url.IsLinkActive("Index", "Usuario")">
                        <a href="@Url.Action("Index", "Usuario")"><i class="glyphicon glyphicon-user"></i> <span>Usuários</span></a>
                    </li>
                </ul>
            </li>

            <li class="@Url.IsLinkActive("Index", "Home")">
                <a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-home"></i> <span>Home</span></a>
            </li>

            <li class="treeview">
                <a href="#">
                    <i class="fa fa-link"></i>
                    <span>Cadastros</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@Url.IsLinkActive("Index", "Pessoa")">
                        <a href="@Url.Action("Index", "Pessoa")"><i class="glyphicon glyphicon-user"></i> <span>Pessoas</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("Index", "Pedido")">
                        <a href="@Url.Action("Index", "Pedido")"><i class="glyphicon glyphicon-user"></i> <span>Pedidos</span></a>
                    </li>
                </ul>
